@model StudioMetrics.Models.Client

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Associated Artists
        </dt>
        <dd>
            <ul>
                @*Loop over the each PlayerProject and show the Title for the associated project*@
                @foreach (ClientArtist ca in Model.ClientArtists)
                {
                    <il>@ca.Client.Name</il>
                }
            </ul>
        </dd>
        <dt>
            Their Projects
        </dt>
        <dd>
            <ul>
                @*Loop over the each PlayerProject and show the Title for the associated project*@
                @foreach (Project p in Model.Projects)
                {
                    <il>@p.Title</il>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ClientId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
