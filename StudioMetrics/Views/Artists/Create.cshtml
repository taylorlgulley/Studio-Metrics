@model StudioMetrics.Models.ViewModels.ArtistCreateEditViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create a New Artist</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Artist.Name" class="control-label"></label>
                <input asp-for="Artist.Name" class="form-control" />
                <span asp-validation-for="Artist.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedClients" class="control-label">Associated Clients</label>
                <select multiple asp-for="SelectedClients" class="form-control" asp-items="@Model.AvailableClients"></select>
                <span asp-validation-for="SelectedClients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-create btn-default" />
            </div>
        </form>
    </div>
</div>

<form>
    <button asp-action="Index" type="submit" class="btn btn-details btn-default">Back to List</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
