@model StudioMetrics.Models.ViewModels.ProjectCreateEditViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create a New Project</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Project.Title" class="control-label"></label>
                <input asp-for="Project.Title" class="form-control" />
                <span asp-validation-for="Project.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.ProjectTypeId" class="control-label">Project Type</label>
                <select asp-for="Project.ProjectTypeId" class="form-control" asp-items="@Model.ProjectTypes"></select>
                <span asp-validation-for="Project.ProjectTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.Description" class="control-label"></label>
                <input asp-for="Project.Description" class="form-control" />
                <span asp-validation-for="Project.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.Payrate" class="control-label">Payrate Per Day</label>
                <input asp-for="Project.Payrate" class="form-control" />
                <span asp-validation-for="Project.Payrate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.TimeTable" class="control-label">Time Table in Days</label>
                <input asp-for="Project.TimeTable" class="form-control" />
                <span asp-validation-for="Project.TimeTable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.StartDate" class="control-label">Start Date</label>
                <input asp-for="Project.StartDate" class="form-control" />
                <span asp-validation-for="Project.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.StatusTypeId" class="control-label"></label>
                <select asp-for="Project.StatusTypeId" class="form-control" asp-items="@Model.StatusTypes"></select>
                <span asp-validation-for="Project.StatusTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.ClientId" class="control-label"></label>
                <select asp-for="Project.ClientId" class="form-control" asp-items="@Model.Clients"></select>
                <span asp-validation-for="Project.ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedPlayers" class="control-label">Inhouse Players</label>
                <select multiple asp-for="SelectedPlayers" class="form-control" asp-items="@Model.AvailablePlayers"></select>
                <span asp-validation-for="SelectedPlayers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedArtists" class="control-label">Associated Artists</label>
                <select multiple asp-for="SelectedArtists" class="form-control" asp-items="@Model.AvailableArtists"></select>
                <span asp-validation-for="SelectedArtists" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-create btn-default" />
            </div>
        </form>
    </div>
</div>

<form>
    <button asp-action="ProjectsOfStatus" asp-route-id="All" type="submit" class="btn btn-details btn-default">Back to List</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
